
  <main>
    <div class="container mw-100">
      <div class="row" >
        <% @artists.each do |artist| %>
          <div class="card">
            <img src="<%= artist.image_url %>" class="card-img-top size_img" alt="<%= artist.name %>">
            <div class="card-body">
              <h5 class="card-title text-center"><%= artist.name %></h5>
              <%= link_to "Ver mas", artist_path(artist), class: "btn btn-primary btn-block" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </main>
